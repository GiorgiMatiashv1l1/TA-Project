<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UI Test Suite" parallel="false">

    <listeners>
        <listener class-name="base.AllureListener"/>
    </listeners>

    <test name="Sign Up Test" preserve-order="true">
        <classes>
            <class name="uiTests.SignUpPageTest"/>
        </classes>
    </test>

    <test name="Log in Test">
        <classes>
            <class name="uiTests.LoginPageTest"/>
        </classes>
    </test>

    <test name="Invalid Log in Test">
        <classes>
            <class name="uiTests.InvalidLoginTest"/>
        </classes>
    </test>

    <test name="Logout Test">
        <classes>
            <class name="uiTests.LogoutTest"/>
        </classes>
    </test>

    <test name="Contact Form Test">
        <classes>
            <class name="uiTests.ContactUsTest"/>
        </classes>
    </test>

    <test name="All Products Test">
        <classes>
            <class name="uiTests.AllProductsTest"/>
        </classes>
    </test>

    <test name="Search Product Test">
        <classes>
            <class name="uiTests.SearchProductTest"/>
        </classes>
    </test>

    <test name="Add To Cart Test">
        <classes>
            <class name="uiTests.AddToCartTest"/>
        </classes>
    </test>

    <test name="Product Review Test">
        <classes>
            <class name="uiTests.ProductReviewTest"/>
        </classes>
    </test>

    <test name="Test Cases Page Test">
        <classes>
            <class name="uiTests.TestCasesPageTest"/>
        </classes>
    </test>

</suite>
